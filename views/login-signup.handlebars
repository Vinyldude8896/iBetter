<section class="login-page">
    <div>
        <h1>iBetter</h1>
    </div>
  
  <form class="login-form entry-form">
      <div>
          <button type="submit">Login</button>
      </div>
      <div>
          <label for="email-login">Email:</label>
          <input type="text" placeholder="Email" id="email-login" />
      </div>
      <div>
          <label for="password-login">Password:</label>
          <input type="password" placeholder="Password" id="password-login" />
      </div>
  </form>
    
  <form class="signup-form entry-form">
      <div>
          <button type="submit">Signup</button>
      </div>
      <div>
          <label for="username-signup">Username:</label>
          <input type="text" placeholder="Username" id="username-signup" />
      </div>
      <div>
          <label for="email-signup">Email:</label>
          <input type="text" placeholder="Email" id="email-signup" />
      </div>
      <div>
          <label for="password-signup">Password:</label>
          <input type="password" placeholder="Password" id="password-signup" />
      </div>
  </form>
</section>
<footer>
    <div class="card text-center top-layer">
      <div class="card-header"></div>
      <div class="card-body">
        <h5 class="card-title">Thanks for visiting the iBetter Habit tracker wesite</h5>
        <p class="card-text">We value your support and encourage you to be Better!</p>
      </div>
      <div class="card-footer text-muted"></div>
    </div>
</footer>
<script src="/javascript/login.js"></script>