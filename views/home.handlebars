{{!-- chart --}}
{{#if habits.length}}
<div class="container text-center d-flex flex-column align-items-center justify-contents-center my-5">
  <div class="card w-100">
    <div class="card-body">
      <h3 class="card-title Kalam-font">Hello {{username}}! Here's your progress so far!</h3>
    </div>
  </div>
</div>

<div class="container text-center">
  <div class="row">
    <section class="chartbox col">
      <canvas id="myChart"></canvas>
    </section>
  </div>
</div>
{{else}}
<div class="container text-center d-flex flex-column align-items-center justify-contents-center my-5">
  <div class="card w-100">
    <div class="card-body">
    <h1 class="Kalam-font">Hello {{username}}!</h1>
    <h2 class="Kalam-font">You're currently not tracking any habits</h2>
    <h3 class="Kalam-font"> To get started <a class="btn btn-primary" href="/my-habits">click here</a></h3>
  </div>
  </div>
</div>
{{/if}}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/javascript/bar-chart.js"></script>